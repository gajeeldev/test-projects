---
import Layout from '@/layouts/Layout.astro'
import HeroKeyLogo from '@/assets/hero-key-logo.webp'
import HeroKeyBackground from '@/assets/hero-key-background.webp'
import LogoVIIcon from '@/assets/logo-vi.svg'
import PlayButtonIcon from '@/assets/play-button.svg'
---

<Layout>
	<section>
		<picture
			id='hero-key'
			class='h-screen scale-125 block overflow-hidden fixed'
		>
			<img
				id='hero-key-logo'
				src={HeroKeyLogo.src}
				alt='hero key logo'
				class='absolute w-full h-full object-cover'
			/>
			<img
				id='hero-key-background'
				src={HeroKeyBackground.src}
				alt='hero key background'
				class='w-full h-full object-cover'
			/>
		</picture>
	</section>

	<div
		class='fixed flex flex-col items-center justify-between h-screen w-full px-20 py-16'
	>
		<header class='flex justify-between w-full'>
			<LogoVIIcon
				class='size-10 text-white hover:text-yellow-100 transition-colors duration-500 cursor-pointer'
			/>
		</header>

		<button> <PlayButtonIcon id='hero-play-button' /> </button>
	</div>
</Layout>
